#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <unistd.h>
#include <windows.h>
///#include <threads.h>
#include <conio.h>
#include <dos.h>
int main(void)
{

    int age = 30;
    int * pAge = &age;  /// *pAge stores the memory address of variable age. & is pointer sign.
    double gpa = 3.3;
    double *pGpa = &gpa;  /// Use the data type of the variable type.
    float roll = 43.0;
    float *pRoll = &roll;
    char grade = 'A';
    char *pGrade = &grade;
    char grades[25] = "Chill Gates";;
    char *pGrades = &grades;
    char grades2[25] = "Bill Gates";;
    char *pGrades2 = &grades2;

    printf(" \n Pointer is a type of data that stores the physical memory address of a variable \n");

    printf("\n age memory address : %p, \n gpa memory address: %p,\n roll memory address : %p,\n grade memory address: %p, \n grades memory address; %p \n", &age, &gpa, &roll, &grade, &grades, &grades2
           );

    printf("\n print out all the memory addresses from pointer variables.\n");
    printf("\n %p \n " , pAge);
    printf("\n %p \n " , pGpa);
    printf("\n %p \n " , pRoll);
    printf("\n %p \n " , pGrade);
    printf("\n %p \n " , pGrades);

     printf("\n print out all the values in those memory addresses from pointer variables.\n");
    printf("\n %d \n " , *pAge);
    printf("\n %f \n " , *pGpa);
    printf("\n %f \n " , *pRoll);
    printf("\n %c \n " , *pGrade);
    printf("\n %c \n " , *pGrades);
    printf("\n %c \n " , *pGrades);
    printf("\n %c \n " , *pGrades);
    printf("\n %c \n " , *pGrades2);

    printf("\n *&age= %d \n " , *&age); /// dereferencing.
    printf("\n &*&age= %d \n " , &*&age);
    printf("\n *&*&age= %d \n " , *&*&age); /// dereferencing.
return 0;

}
